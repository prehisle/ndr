# 基础数据库配置
DB_URL=postgresql+psycopg2://postgres:postgres@localhost:5432/ndr
DB_CONNECT_TIMEOUT=5
TEST_DB_URL=postgresql+psycopg2://postgres:postgres@localhost:5432/ndr_test

# 开发环境端口约定（同机多项目建议使用 9001-9009）
# Docker Compose 会读取该文件或 `.env` 中的变量用于端口映射：
# - APP_PORT: 暴露应用到宿主机的端口（容器内仍为 8000）
# - PG_PORT:  暴露 PostgreSQL 到宿主机的端口（容器内仍为 5432）
APP_PORT=9001
PG_PORT=5541

# 服务开关
ENABLE_METRICS=true
AUTO_APPLY_MIGRATIONS=true
TRACE_HTTP=false
LOG_LEVEL=INFO

# 认证与安全
API_KEY_ENABLED=false
API_KEY=secret-123
DESTRUCTIVE_API_KEY=admin-secret

# 跨域设置
CORS_ENABLED=false
CORS_ORIGINS=

# 测试辅助
NDR_BASE_URL=http://localhost:9001
RUN_REMOTE_REQUESTS_TEST=false
